      * WAIT FOR KEYPRESS, THEN TRY TO OPEN FILE AGAIN
      WAIT
    ENDIF
    * REPEAT UNTIL FILE ACCESS IS GRANTED
  ENDDO
  STORE -1 TO OPEN:S
ENDIF
RELEASE USETEMP



